@model List<Patient>
@{
}

<h2 class="text-center mb-5> List of Patients </h2>

<div>
    <div class="col">
        <a class="btn btn-primary" asp-controller="Patients" asp-action="Create">Add New Patient Information</a>
    </div>
    <div class="col">
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Doctor Name</th>
            <th>Age</th>
            <th>Bloodgroup</th>           
            <th>City</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var patient in Model)
            {
            <tr>
                <td>@patient.Id</td>
                <td>@patient.Name</td>
                <td>@patient.Email</td>
                <td>@patient.Contact</td>
                <td>@patient.DoctorName</td>
                <td>@patient.Age</td>
                <td>@patient.Bloodgroup</td>               
                <td>@patient.City</td>
                <td>@patient.Address</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-controller="Patients" asp-action="Edit" asp-route-id="@patient.Id">
                        Edit
                    </a>
                    <a class="btn btn-danger btn-sm" asp-controller="Patients" asp-action="Delete" asp-route-id="@patient.Id" onclick="return confirm('Are you sure?')">
                        Delete
                    </a>
                </td>
            </tr>
            }
    </tbody>
</table>